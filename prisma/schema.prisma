generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma"
  output   = "./zod"
  import   = "../src/zod-schemas"
}

datasource db {
  provider  = "postgresql"
  url       = env("DB_URL")
  directUrl = env("DIRECT_URL")
}

enum Category {
  Entertainment
  Lifestyle
  Technology
  Finance
  Politics
  Other
}

enum Frequency {
  Daily
  Monthly
  Yearly
}

enum Status {
  Active
  Cancelled
  Expired
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]
}

model Subscription {
  id            String    @id @default(cuid())
  name          String /// @zod.max(255, {message: "The title must be shorter than 256 characters"})
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  User          User?     @relation(fields: [userId], references: [id])
  userId        String?
  price         Int
  Currency      Currency  @relation(fields: [currencyId], references: [id])
  currencyId    String
  frequency     Frequency
  category      Category
  paymentMethod String
  status        Status
  startDate     DateTime
  renewalDate   DateTime
}

model Currency {
  id           String         @id @default(cuid())
  name         String
  code         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Subscription Subscription[]
}
